@{
    ViewData["Title"] = "Upload";
}

@model Article
<h2>Submit Article Information...</h2>
<p>Fill in all applicable information for the article you would like to upload.</p>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Upload" method="post">

    <h3>Upload Article...</h3>
    <div class="form-group">
        <label>Place URL here:</label><input asp-for="SourceUrl" class="form-control" />
    </div>

    <h3>Publication Information</h3>
    <div class="form-group">
        <label>Article Title:</label><input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>Type: </label><input asp-for="SourceMedium" class="form-control" />
    </div>
    <div class="form-group">
        <label>Publication:</label><input asp-for="PublicationName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Publish Date:</label><input asp-for="PublishDate" class="form-control" />
    </div>

    <h3>Author Information</h3>
    <div class="form-group">
        <label>Author First Name: </label><input asp-for="AuthorFirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Author Last Name: </label><input asp-for="AuthorLastName" class="form-control" />
    </div>


    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Upload" />
    </div>
</form>

